@namespace FoodRecipeApp.Models
@model Category

<form method="post">
    <input asp-for="Id" hidden />

   <div class="row" style="margin-top: 140px">
        <div class="border p-4 mt-3">

            <div class="row pb-4">
                <h2 class="text-primary">Delete Category</h2>
                <hr />
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>

                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
                </div>

            </div>

        </div>
   </div>
    

</form>
